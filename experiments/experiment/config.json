{
    "dataset_reader": {
        "type": "spider",
        "dataset_path": "/content/drive/My Drive/spider/database",
        "keep_if_unparsable": false,
        "lazy": false,
        "loading_limit": 3,
        "question_token_indexers": {
            "tokens": {
                "type": "bert-pretrained",
                "do_lowercase": true,
                "pretrained_model": "bert-base-uncased",
                "use_starting_offsets": true
            }
        },
        "tables_file": "/content/drive/My Drive/spider/tables.json"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 15
    },
    "model": {
        "type": "spider",
        "action_embedding_dim": 768,
        "dataset_path": "/content/drive/My Drive/spider/",
        "decoder_beam_search": {
            "beam_size": 10
        },
        "decoder_self_attend": true,
        "decoder_use_graph_entities": true,
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 768,
            "input_size": 1536,
            "num_layers": 1
        },
        "entity_encoder": {
            "type": "boe",
            "averaged": true,
            "embedding_dim": 768
        },
        "gnn": true,
        "gnn_timesteps": 2,
        "input_attention": {
            "type": "dot_product"
        },
        "max_decoding_steps": 100,
        "parse_sql_on_decoding": true,
        "past_attention": {
            "type": "dot_product"
        },
        "question_embedder": {
            "allow_unmatched_keys": true,
            "embedder_to_indexer_map": {
                "bert": [
                    "tokens",
                    "tokens-offsets"
                ]
            },
            "token_embedders": {
                "bert": {
                    "type": "bert-pretrained",
                    "pretrained_model": "bert-base-uncased"
                }
            }
        },
        "training_beam_size": 1,
        "use_neighbor_similarity_for_linking": true
    },
    "train_data_path": "/content/drive/My Drive/spider/train_spider.json",
    "validation_data_path": "/content/drive/My Drive/spider/dev.json",
    "trainer": {
        "cuda_device": 0,
        "num_epochs": 30,
        "num_serialized_models_to_keep": 2,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 20,
        "validation_metric": "+sql_match"
    },
    "validation_dataset_reader": {
        "type": "spider",
        "dataset_path": "/content/drive/My Drive/spider/database",
        "keep_if_unparsable": true,
        "lazy": false,
        "loading_limit": 3,
        "question_token_indexers": {
            "tokens": {
                "type": "bert-pretrained",
                "do_lowercase": true,
                "pretrained_model": "bert-base-uncased",
                "use_starting_offsets": true
            }
        },
        "tables_file": "/content/drive/My Drive/spider/tables.json"
    },
    "validation_iterator": {
        "type": "basic",
        "batch_size": 15
    }
}